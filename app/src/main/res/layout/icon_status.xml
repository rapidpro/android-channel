<?xml version="1.0" encoding="utf-8"?>

<io.rapidpro.androidchannel.ui.IconStatus
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#fff"
        android:onClick="onStatusClick"
        android:layout_width="wrap_content"
        android:layout_height="32dp">

    <io.rapidpro.androidchannel.ui.IconTextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/icon_bubble_right"
            android:textColor="@color/bg_orange"
            android:textSize="40dp"/>

    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@+id/icon"
            android:layout_marginTop="-10dp"
            android:layout_alignBottom="@+id/icon"
            android:gravity="center_vertical"
            android:text="@string/sample_outgoing_message"
            android:textSize="20dp"
            android:textColor="@color/font_black"/>

</io.rapidpro.androidchannel.ui.IconStatus>
